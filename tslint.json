{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "*.json",
            "**/*.json"
        ]
    },
    "rules": {
        "quotemark": [
            true,
            "double"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "never"
                }
            }
        ],
        "arrow-parens": true,
        "interface-name": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": true,
        "no-console": false
    },
    "jsRules": {
        "no-console": false
    }
}
